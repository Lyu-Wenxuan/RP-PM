<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TrainTrianerMapper">
    
    <resultMap type="TrainTrianer" id="TrainTrianerResult">
        <result property="id"    column="id"    />
        <result property="fullName"    column="full_name"    />
        <result property="title"    column="title"    />
        <result property="expertise"    column="expertise"    />
        <result property="email"    column="email"    />
        <result property="phone"    column="phone"    />
    </resultMap>

    <sql id="selectTrainTrianerVo">
        select id, full_name, title, expertise, email, phone from train_trianer
    </sql>

    <select id="selectTrainTrianerList" parameterType="TrainTrianer" resultMap="TrainTrianerResult">
        <include refid="selectTrainTrianerVo"/>
        <where>  
            <if test="fullName != null  and fullName != ''"> and full_name like concat('%', #{fullName}, '%')</if>
        </where>
    </select>
    
    <select id="selectTrainTrianerById" parameterType="Long" resultMap="TrainTrianerResult">
        <include refid="selectTrainTrianerVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTrainTrianer" parameterType="TrainTrianer" useGeneratedKeys="true" keyProperty="id">
        insert into train_trianer
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fullName != null">full_name,</if>
            <if test="title != null">title,</if>
            <if test="expertise != null">expertise,</if>
            <if test="email != null">email,</if>
            <if test="phone != null">phone,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fullName != null">#{fullName},</if>
            <if test="title != null">#{title},</if>
            <if test="expertise != null">#{expertise},</if>
            <if test="email != null">#{email},</if>
            <if test="phone != null">#{phone},</if>
         </trim>
    </insert>

    <update id="updateTrainTrianer" parameterType="TrainTrianer">
        update train_trianer
        <trim prefix="SET" suffixOverrides=",">
            <if test="fullName != null">full_name = #{fullName},</if>
            <if test="title != null">title = #{title},</if>
            <if test="expertise != null">expertise = #{expertise},</if>
            <if test="email != null">email = #{email},</if>
            <if test="phone != null">phone = #{phone},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTrainTrianerById" parameterType="Long">
        delete from train_trianer where id = #{id}
    </delete>

    <delete id="deleteTrainTrianerByIds" parameterType="String">
        delete from train_trianer where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>